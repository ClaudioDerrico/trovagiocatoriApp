<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="trovagiocatoriApp.Views.PostPage"
             Title="Post"
             BackgroundImageSource="sfondo_rimosso.png">

	<VerticalStackLayout>
		<!-- Titolo con provincia e sport -->
		<Label x:Name="TitleLabel"
               HorizontalOptions="Center"
               VerticalOptions="CenterAndExpand"
               FontSize="Large"
               TextColor="Black"/>

        <!-- Griglia dei post -->
		<CollectionView x:Name="PostCollectionView"
                        ItemsSource="{Binding Posts}">
			<CollectionView.ItemTemplate>
				<DataTemplate>
					<Frame BorderColor="#f2f2f2" Padding="10" Margin="5">
						<Grid>
							<Grid.RowDefinitions>
								<RowDefinition Height="Auto"/>
								<RowDefinition Height="Auto"/>
								<RowDefinition Height="Auto"/>
								<RowDefinition Height="Auto"/>
								<RowDefinition Height="Auto"/>
							</Grid.RowDefinitions>
							<Label Grid.Row="0" Text="{Binding Titolo}" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
							<Label Grid.Row="1" Text="{Binding NomeUtente}" HorizontalTextAlignment="Center"/>
							<Label Grid.Row="2" Text="{Binding DataPartita}" HorizontalTextAlignment="Center"/>
							<Label Grid.Row="3" Text="{Binding Citta}" HorizontalTextAlignment="Center"/>
							<Label Grid.Row="4" Text="{Binding DataAttuale}" HorizontalTextAlignment="Center"/>
						</Grid>
					</Frame>
				</DataTemplate>
			</CollectionView.ItemTemplate>
		</CollectionView>
	</VerticalStackLayout>
</ContentPage>

